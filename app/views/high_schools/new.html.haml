.container{style: 'padding: 15px;'}
  %h1.title Dodaj szkołę
  .container
    .columns
      .column.is-9
        = form_for(@highschool, url: new_highschool_path(@highschool), remote: true, authenticity_token: true) do |f|
          .field
            = label(:name, 'Nazwa szkoły', class: 'label')
            .control
              = f.text_field :name, class: 'input'
          .field
            = label(:city, 'Miasto', class: 'label')
            .control
              = f.text_field :city, class: 'input'
          .field
            = label(:school_type, 'Typ szkoły', class: 'label')
            .control
              .select
                = f.select(:school_type, [['Liceum', 'general'], ['Technikum', 'technological'], ['Inna', 'other']], { include_blank: true })
          .field
            .control
              = f.submit "Dodaj", class: 'button is-primary'
