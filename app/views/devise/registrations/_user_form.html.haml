.columns
  .column.is-9
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'userForm'}, local: true) do |f|
      = render 'devise/shared/error_messages', resource: resource
      #basics{'v-show':'formIndex==0'}
        = render 'basic_form', f: f
      #details{'v-show':'formIndex==1'}
        = render 'details_form', f: f
      #matura{'v-show':'formIndex==2'}
        .columns
          .column
            %h3.subtitle Wyniki matur:
            %br
            .container.is-fluid{'ref':'exams'}
              = f.fields_for :matura_results do |m|
                = render 'matura_result', f: m
            %br
            .container{'v-on:click': 'addExam'}
              = link_to_add_exam('Dodaj egzamin', f, :matura_results, class: 'button is-primary is-pulled-right')
          .column
            %h3.subtitle Kierunki studi√≥w:
            %br
            .container.is-fluid{'ref':'interests'}
              = f.fields_for :study_interests do |s|
                = render 'study_interest', f: s
            %br
            .container{'v-on:click': 'addInterest'}
              = link_to_add_exam('Dodaj kierunek', f, :study_interests, class: 'button is-primary is-pulled-right')
      = f.submit 'Test'
  .column.is-3
    = render 'info_box'