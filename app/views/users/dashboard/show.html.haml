.container{style: 'padding: 25px;'}
  .columns
    .column.is-4
      .columns.is-centered.is-vcentered
        .column.is-4
          %figure.image.is-128x128
            %img{src: 'https://bulma.io/images/placeholders/128x128.png'}
        .column
          %h2.title
            = @user.username
          %h2.subtitle 
            = @user.email
      .column
        .list
          - @user.field_of_studies.each do |field|
            %li.list-item
              = field.name
      .columns
        .column
          %table.table.is-fullwidth
            %thead
              %tr
                %th Przedmiot
                %th Poziom
                %th Wynik
            %tbody
            - @user.matura_results.each do |mr|
              %tr
                %td 
                  = mr.matura_subject.name
                %td
                  = MaturaResult.human_enum_name(:level, mr.level)
                %td
                  = mr.result
    .column
      %h1.title Raport
      .container{style:'height: 650px; overflow: auto;'}
        .tile.is-ancestor
        - @fields.each_with_index do |field, id|
          .tile.is-12.is-vertical{style: 'padding: 10px;'}
            .box
              .columns
                .column.is-6
                  %span.subtitle 
                    = field.field_of_study.name
                  %p
                    = "#{field.academy.name} - #{field.academy.city}"
                .column
                  %p.heading Limit miejsc
                  - unless field.students_limit.nil?
                    %p 
                      = field.students_limit
                  - else
                    %p Brak informacji
                .column
                  %p.heading Próg punktowy
                  - unless field.minimal_points.nil?
                    %p 
                      = field.minimal_points.to_s+' pkt'
                  - else
                    %p Brak informacji
                .column
                  %p.heading Twój wynik
                  %p 
                    = "#{@user.results[id]} pkt"
                    
